@model DA_QLNhanSu.Models.CareerDevelopment

@{
    ViewData["Title"] = "Chỉnh sửa đơn phát triển sự nghiệp";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center text-primary mt-4">Sửa Đơn @Model.Type</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <!-- Ảnh nhân sự -->
                        @if (!string.IsNullOrEmpty(Model.IdeNavigation?.Image))
                        {
                            <div class="text-center mb-3">
                                <img src="@Model.IdeNavigation.Image" alt="Ảnh nhân sự" width="120" height="120" class="rounded-circle border border-2 shadow-sm" />
                            </div>
                        }

                        <div class="form-group mb-3">
                            <label asp-for="Ide" class="form-label">Tên nhân sự</label>
                            <select asp-for="Ide" class="form-select" asp-items="ViewBag.Ide"></select>
                            <span asp-validation-for="Ide" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Type" class="form-label">Hình thức phát triển</label>
                                <input asp-for="Type" class="form-control" placeholder="Nhập hình thức phát triển..." />
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Date" class="form-label">Ngày thực hiện</label>
                                <input asp-for="Date" type="date" class="form-control" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Fromrole" class="form-label">Chức vụ cũ</label>
                                <input asp-for="Fromrole" class="form-control" placeholder="Nhập chức vụ cũ..." />
                                <span asp-validation-for="Fromrole" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Torole" class="form-label">Chức vụ mới</label>
                                <input asp-for="Torole" class="form-control" placeholder="Nhập chức vụ mới..." />
                                <span asp-validation-for="Torole" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label">Trạng thái</label>
                            <select asp-for="Status" class="form-select">
                                <option value="true">Đã duyệt</option>
                                <option value="false">Chờ duyệt</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <!-- Nút Lưu -->
                        <div class="text-center">
                            <input type="submit" value="Lưu" class="btn btn-primary px-4 py-2 shadow" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>
