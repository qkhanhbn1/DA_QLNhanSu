@model DA_QLNhanSu.Models.EmployeeAllowance

@{
    ViewData["Title"] = "Chỉnh sửa phụ cấp nhân sự";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center text-primary mt-4">Sửa thông tin phụ cấp</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <!-- Ảnh nhân sự -->
                        @if (!string.IsNullOrEmpty(Model.IdeNavigation?.Image))
                        {
                            <div class="text-center mb-3">
                                <img src="@Model.IdeNavigation.Image" alt="Ảnh nhân sự" width="120" height="120" class="rounded-circle border border-2 shadow-sm" />
                            </div>
                        }

                        <div class="form-group mb-3">
                            <label asp-for="Ide" class="form-label">Tên nhân sự</label>
                            <select asp-for="Ide" class="form-select" asp-items="ViewBag.Ide"></select>
                            <span asp-validation-for="Ide" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="IdAllowances" class="form-label">Loại phụ cấp</label>
                            <select asp-for="IdAllowances" class="form-select" asp-items="ViewBag.IdAllowances">
                                <option value="">-- Chọn loại phụ cấp --</option>
                            </select>
                            <span asp-validation-for="IdAllowances" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Money" class="form-label">Số tiền phụ cấp</label>
                            <input asp-for="Money" type="number" class="form-control" placeholder="Nhập số tiền..." />
                            <span asp-validation-for="Money" class="text-danger"></span>
                        </div>

                        <!-- Nút Lưu -->
                        <div class="text-center">
                            <input type="submit" value="Lưu" class="btn btn-primary px-4 py-2 shadow" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>
