@model DA_QLNhanSu.Models.EmployeeAllowance

@{
    ViewData["Title"] = "Tạo mới phụ cấp nhân sự";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center my-4 text-primary">Thêm mới phụ cấp nhân sự</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Ide" class="form-label">Nhân viên</label>
                        <select asp-for="Ide" class="form-select" asp-items="ViewBag.Ide">
                            <option value="">-- Chọn nhân viên --</option>
                        </select>
                        <span asp-validation-for="Ide" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdAllowances" class="form-label">Loại phụ cấp</label>
                        <select asp-for="IdAllowances" class="form-select" asp-items="ViewBag.IdAllowances">
                            <option value="">-- Chọn loại phụ cấp --</option>
                        </select>
                        <span asp-validation-for="IdAllowances" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Money" class="form-label">Số tiền</label>
                        <input asp-for="Money" type="number" class="form-control" placeholder="Nhập số tiền phụ cấp..." />
                        <span asp-validation-for="Money" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-30">Tạo</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
        </div>
    </div>
</div>
