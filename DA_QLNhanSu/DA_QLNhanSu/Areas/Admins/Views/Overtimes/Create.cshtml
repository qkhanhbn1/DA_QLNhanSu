@model DA_QLNhanSu.Models.Overtime

@{
    ViewData["Title"] = "Tạo mới đơn tăng ca";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center my-4 text-primary">Thêm mới đơn tăng ca</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Ide" class="form-label">Nhân viên</label>
                        <select asp-for="Ide" class="form-select" asp-items="ViewBag.Ide">
                            <option value="">-- Chọn nhân viên --</option>
                        </select>
                        <span asp-validation-for="Ide" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="WorkingHours" class="form-label">Số giờ tăng ca</label>
                            <input asp-for="WorkingHours" type="number" class="form-control" />
                            <span asp-validation-for="WorkingHours" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SalaryCoeficient" class="form-label">Hệ số lương</label>
                            <input asp-for="SalaryCoeficient" type="number" class="form-control" step="0.01" />
                            <span asp-validation-for="SalaryCoeficient" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="HourlyWage" class="form-label">Lương theo giờ</label>
                            <input asp-for="HourlyWage" type="number" class="form-control" />
                            <span asp-validation-for="HourlyWage" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="OvertimePay" class="form-label">Số tiền tăng ca</label>
                            <input asp-for="OvertimePay" type="number" class="form-control" />
                            <span asp-validation-for="OvertimePay" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Month" class="form-label">Tháng</label>
                            <input asp-for="Month" type="number" class="form-control" />
                            <span asp-validation-for="Month" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Year" class="form-label">Năm</label>
                            <input asp-for="Year" type="number" class="form-control" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-30">Tạo</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
        </div>
    </div>
</div>