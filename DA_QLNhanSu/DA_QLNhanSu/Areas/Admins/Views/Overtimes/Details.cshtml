@model DA_QLNhanSu.Models.Overtime

@{
    ViewData["Title"] = "Chi tiết tăng ca";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center text-primary mb-4">Chi tiết tăng ca</h1>

<div class="card shadow-lg">
    <div class="card-header bg-info text-white">
        <h4>@Model.IdeNavigation.Name</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Cột trái hiển thị ảnh -->
            <div class="col-md-4 text-center">
                <img src="@Model.IdeNavigation.Image" alt="@Model.IdeNavigation.Name" class="img-fluid rounded border shadow-sm" style="width:200px;height:200px">
            </div>

            <!-- Cột phải hiển thị thông tin -->
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Tên nhân sự</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.IdeNavigation.Name)</dd>
                    <dt class="col-sm-4">Số giờ làm thêm</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.WorkingHours)</dd>
                    <dt class="col-sm-4">Hệ số lương</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SalaryCoeficient)</dd>
                    <dt class="col-sm-4">Lương theo giờ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.HourlyWage) VNĐ</dd>
                    <dt class="col-sm-4">Lương tăng ca</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.OvertimePay) VNĐ</dd>
                    <dt class="col-sm-4">Tháng</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Month)</dd>
                    <dt class="col-sm-4">Năm</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Year)</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Ido" class="btn btn-primary me-2">
            <i class="bi bi-pencil-square"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>
