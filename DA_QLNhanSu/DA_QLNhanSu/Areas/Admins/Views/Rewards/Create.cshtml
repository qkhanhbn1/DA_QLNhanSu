@model DA_QLNhanSu.Models.Reward

@{
    ViewData["Title"] = "Tạo mới phần thưởng";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center my-4 text-primary">Thêm mới phần thưởng</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Ide" class="form-label">Nhân viên</label>
                        <select asp-for="Ide" class="form-select" asp-items="ViewBag.Ide">
                            <option value="">-- Chọn nhân viên --</option>
                        </select>
                        <span asp-validation-for="Ide" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RewardDate" class="form-label">Ngày thưởng</label>
                        <input asp-for="RewardDate" type="date" class="form-control" />
                        <span asp-validation-for="RewardDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label">Nội dung</label>
                        <textarea asp-for="Content" class="form-control" rows="3" placeholder="Nhập nội dung phần thưởng..."></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RewardGift" class="form-label">Phần thưởng</label>
                        <input asp-for="RewardGift" class="form-control" placeholder="Nhập phần thưởng..." />
                        <span asp-validation-for="RewardGift" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Trạng thái</label>
                        <select asp-for="Status" class="form-select">
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="true">Đã duyệt</option>
                            <option value="false">Chờ duyệt</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-30">Tạo</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
        </div>
    </div>
</div>
