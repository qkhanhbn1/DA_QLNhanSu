@model DA_QLNhanSu.Models.Reward

@{
    ViewData["Title"] = "Chỉnh sửa khen thưởng";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center text-primary mt-4">Sửa thông tin khen thưởng</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        @if (!string.IsNullOrEmpty(Model.IdeNavigation?.Image))
                        {
                            <div class="text-center mb-3">
                                <img src="@Model.IdeNavigation.Image" alt="Ảnh nhân sự" width="120" height="120" class="rounded-circle border border-2 shadow-sm" />
                            </div>
                        }
                        <div class="form-group mb-3">
                            <label asp-for="Ide" class="form-label">Tên nhân sự</label>
                            <select asp-for="Ide" class="form-select" asp-items="ViewBag.Ide"></select>
                            <span asp-validation-for="Ide" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="RewardDate" class="form-label">Ngày thưởng</label>
                            <input asp-for="RewardDate" type="date" class="form-control" />
                            <span asp-validation-for="RewardDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Content" class="form-label">Nội dung</label>
                            <input asp-for="Content" class="form-control" placeholder="Nhập nội dung khen thưởng..." />
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="RewardGift" class="form-label">Phần thưởng</label>
                            <input asp-for="RewardGift" class="form-control" placeholder="Nhập phần thưởng..." />
                            <span asp-validation-for="RewardGift" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label">Trạng thái</label>
                            <select asp-for="Status" class="form-select">
                                <option value="true">Đã duyệt</option>
                                <option value="false">Chờ duyệt</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Lưu" class="btn btn-primary px-4 py-2 shadow" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>
