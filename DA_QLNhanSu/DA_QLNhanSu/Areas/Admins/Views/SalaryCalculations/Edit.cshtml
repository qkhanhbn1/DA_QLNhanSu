@model DA_QLNhanSu.Models.SalaryCalculation

@{
    ViewData["Title"] = "Chỉnh sửa bảng lương";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center text-primary mt-4">Chỉnh sửa bảng lương</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Ids" />

                        <!-- Ảnh nhân sự -->
                        @if (!string.IsNullOrEmpty(Model.IdeNavigation?.Image))
                        {
                            <div class="text-center mb-3">
                                <img src="@Model.IdeNavigation.Image" alt="Ảnh nhân sự" width="120" height="120" class="rounded-circle border border-2 shadow-sm" />
                            </div>
                        }

                        <div class="form-group mb-3">
                            <label asp-for="Ide" class="form-label">Tên nhân sự</label>
                            <select asp-for="Ide" class="form-select" asp-items="ViewBag.Ide"></select>
                            <span asp-validation-for="Ide" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Month" class="form-label">Tháng</label>
                                <input asp-for="Month" class="form-control" type="number" min="1" max="12" />
                                <span asp-validation-for="Month" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Year" class="form-label">Năm</label>
                                <input asp-for="Year" class="form-control" />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdTimesheet" class="form-label">Số ngày làm</label>
                            <select asp-for="IdTimesheet" class="form-select" asp-items="ViewBag.IdTimesheet"></select>
                            <span asp-validation-for="IdTimesheet" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdSalaryhistory" class="form-label">Lương cứng</label>
                            <select asp-for="IdSalaryhistory" class="form-select" asp-items="ViewBag.IdSalaryhistory"></select>
                            <span asp-validation-for="IdSalaryhistory" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdEmployeeallowance" class="form-label">Phụ cấp</label>
                            <select asp-for="IdEmployeeallowance" class="form-select" asp-items="ViewBag.IdEmployeeallowance"></select>
                            <span asp-validation-for="IdEmployeeallowance" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdSalaryadvance" class="form-label">Ứng lương</label>
                            <input class="form-control" value="@(Model.IdSalaryadvanceNavigation?.Money ?? 0)"  />
                            <span asp-validation-for="IdSalaryadvance" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TotalSalary" class="form-label">Tổng tiền</label>
                            <input asp-for="TotalSalary" class="form-control"  />
                            <span asp-validation-for="TotalSalary" class="text-danger"></span>
                        </div>

                        <!-- Nút Lưu -->
                        <div class="text-center">
                            <input type="submit" value="Lưu" class="btn btn-primary px-4 py-2 shadow" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>
