@model DA_QLNhanSu.Models.SalaryCalculation

@{
    ViewData["Title"] = "Chi tiết lương";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center text-primary mb-4">Chi tiết lương</h1>

<div class="card shadow-lg">
    <div class="card-header bg-info text-white">
        <h4>@Model.IdeNavigation.Name</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Cột trái hiển thị ảnh -->
            <div class="col-md-4 text-center">
                <img src="@Model.IdeNavigation.Image" alt="@Model.IdeNavigation.Name" class="img-fluid rounded border shadow-sm" style="width:200px;height:200px">
            </div>

            <!-- Cột phải hiển thị thông tin -->
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Nhân viên</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.IdeNavigation.Name)</dd>
                    <dt class="col-sm-4">Chức vụ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdPositionNavigation.Name)</dd>
                    <dt class="col-sm-4">Tháng</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Month)</dd>
                    <dt class="col-sm-4">Năm</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Year)</dd>
                    <dt class="col-sm-4">Số ngày làm</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Workday)</dd>
                    <dt class="col-sm-4">Tiền theo ngày</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdPositionNavigation.DailyWage) VNĐ</dd>
                    <dt class="col-sm-4">Tiền phụ cấp</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdEmployeeallowanceNavigation.Money) VNĐ</dd>
                    <dt class="col-sm-4">Tiền tăng ca</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdOvertimeNavigation.OvertimePay) VNĐ</dd>
                    <dt class="col-sm-4">Tiền ứng lương</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdSalaryadvanceNavigation.Money) VNĐ</dd>
                    <dt class="col-sm-4 fw-bold">Tổng tiền</dt>
                    <dd class="col-sm-8 fw-bold text-danger">@Html.DisplayFor(model => model.TotalSalary) VNĐ</dd>
                    <dt class="col-sm-4">Ngày tạo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Date)</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Ids" class="btn btn-primary me-2">
            <i class="bi bi-pencil-square"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>
