@model DA_QLNhanSu.Models.LeaveJob

@{
    ViewData["Title"] = "Chi tiết nhân viên nghỉ việc";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center text-primary mb-4">Chi tiết đơn nghỉ việc</h1>

<div class="card shadow-lg">
    <div class="card-header bg-info text-white">
        <h4>@Model.IdeNavigation.Name</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Cột trái hiển thị ảnh -->
            <div class="col-md-4 text-center">
                <img src="@Model.IdeNavigation.Image" alt="@Model.IdeNavigation.Name" class="img-fluid rounded border shadow-sm" style="max-width: 250px;">
            </div>

            <!-- Cột phải hiển thị thông tin -->
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4 ">Tên nhân sự</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.IdeNavigation.Name)</dd>

                    <dt class="col-sm-4">Chức vụ</dt>
                    <dd class="col-sm-8">@Model.IdeNavigation?.IdpNavigation?.Name</dd>
                    <dt class="col-sm-4">Phòng ban</dt>
                    <dd class="col-sm-8">@Model.IdeNavigation?.IddNavigation?.Name</dd>
                    <dt class="col-sm-4">Ngày làm đơn</dt>
                    <dd class="col-sm-8">@(Model.Date?.ToString("dd/MM/yyyy"))</dd>
                    <dt class="col-sm-4">Lý do xin nghỉ</dt>
                    <dd class="col-sm-8">@Model.ReasonLeave</dd>
                    <dt class="col-sm-4">Hình thức nghỉ</dt>
                    <dd class="col-sm-8">@Model.TypeTermination</dd>
                    <dt class="col-sm-4">Trạng thái</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Status == true ? "bg-success" : "bg-secondary")">
                            @(Model.Status == true ? "Đã duyệt" : "Chờ duyệt")
                        </span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">
            <i class="bi bi-pencil-square"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>
