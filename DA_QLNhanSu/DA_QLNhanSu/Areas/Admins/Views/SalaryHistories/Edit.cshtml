@model DA_QLNhanSu.Models.SalaryHistory

@{
    ViewData["Title"] = "Chỉnh sửa lịch sử lương";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center text-primary mt-4">Sửa thông tin lịch sử lương</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Ide" class="form-label">Nhân viên</label>
                            <select asp-for="Ide" class="form-select" asp-items="ViewBag.Ide"></select>
                            <span asp-validation-for="Ide" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Salary" class="form-label">Mức lương</label>
                                <input asp-for="Salary" type="number" class="form-control" placeholder="Nhập mức lương..." />
                                <span asp-validation-for="Salary" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EffectiveDate" class="form-label">Ngày áp dụng</label>
                                <input asp-for="EffectiveDate" type="date" class="form-control" />
                                <span asp-validation-for="EffectiveDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Note" class="form-label">Ghi chú</label>
                            <textarea asp-for="Note" class="form-control" rows="3" placeholder="Nhập ghi chú..."></textarea>
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                        
                        <div class="text-center">
                            <input type="submit" value="Lưu" class="btn btn-primary px-4 py-2 shadow" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>