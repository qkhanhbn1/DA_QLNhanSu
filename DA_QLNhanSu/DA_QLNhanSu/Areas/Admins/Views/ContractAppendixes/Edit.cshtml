@model DA_QLNhanSu.Models.ContractAppendix

@{
    ViewData["Title"] = "Chỉnh sửa phụ lục hợp đồng";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center text-primary mt-4 fw-bold">Sửa thông tin phụ lục hợp đồng</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="IdContract" class="form-label"> Mã hợp đồng</label>
                            <select asp-for="IdContract" class="form-select" asp-items="ViewBag.IdContract"></select>
                            <span asp-validation-for="IdContract" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SigningDate" class="form-label">Ngày ký</label>
                            <input asp-for="SigningDate" type="date" class="form-control" />
                            <span asp-validation-for="SigningDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TypeAppendix" class="form-label">Loại phụ lục</label>
                            <input asp-for="TypeAppendix" class="form-control" placeholder="Nhập loại phụ lục..." />
                            <span asp-validation-for="TypeAppendix" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Content" class="form-label">Nội dung</label>
                            <input asp-for="Content" class="form-control" placeholder="Nhập nội dung..." />
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Lưu" class="btn btn-primary px-4 py-2 shadow" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>
