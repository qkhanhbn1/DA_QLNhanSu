@model DA_QLNhanSu.Models.Department

@{
    ViewData["Title"] = "Chỉnh sửa phòng ban";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center text-primary mt-4">Sửa thông tin phòng ban</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Idd" />

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Tên phòng ban</label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên phòng ban..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Content" class="form-label">Mô tả</label>
                            <textarea asp-for="Content" class="form-control" placeholder="Nhập mô tả về phòng ban..." rows="3"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <!-- Nút Lưu -->
                        <div class="text-center">
                            <input type="submit" value="Lưu" class="btn btn-primary px-4 py-2 shadow" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>

